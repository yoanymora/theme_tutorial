<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Theme Tutorial Assets">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/theme_tutorial/static/src/scss/styles.scss"/>
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script src="/theme_tutorial/static/js/tutorial_editor.js" type="text/javascript"/>
        </xpath>
    </template>
    <template id="assets_editor" inherit_id="website.assets_editor">
        <xpath expr="//script[last()]" position="after">
            <script src="/theme_tutorial/static/js/tutorial_editor.js" type="text/javascript"/>
        </xpath>
    </template>
</odoo>